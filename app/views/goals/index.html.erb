<div id="background">
  <div id="sidebar">
    <img src='<%= @twitter_pic %>' alt="Twitter Profile Pic" class="profile_pic">
    <h5><%= @first_name %></h5>

    <% if current_user.github_goals.count == 0 %>
      <%= link_to 'GitHub Integration', new_github_goal_path, class: 'button' %>
    <% end %>
    <%= link_to 'FitBit Integration', '#', class: 'button' %>
    <%= link_to 'GoodReads Int.', '#', class: 'button' %>


  </div>

  <div class="row services" id="github">
    <img src='/assets/github.png' alt="GitHub" id="mini_logo">
    <h5>Current Goal: <%= @current_github_goal %></h5>
    <h5>Commits Today: X</h5>
    <h5>X% of Today's Goal Met</h5>
    <h5>Current Streak: X Days | Longest Streak: X Days</h5>
    <!-- <h5>Most Prolific @: 3-4 PM | Tuesdays</h5> -->
  </div>

  <div class="row services" id="fitbit">
    <img src='/assets/fitbit.png' alt="FitBit" id="mini_logo">
    <div id="coming_soon">COMING SOON</div>
    <!-- <h3>GoodReads</h3> -->
  </div>

  <div class="row services" id="goodreads">
    <img src='/assets/good_reads.png' alt="GoodReads" id="mini_logo">
    <div id="coming_soon">COMING SOON</div>

    <!-- <h3>FitBit</h3> -->
  </div>
</div>
